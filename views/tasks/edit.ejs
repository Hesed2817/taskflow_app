<%- include('../layouts/main.ejs') -%>

<div class="tasks-container task-form-container">
    <!-- Header -->
    <div class="task-header">
        <a href="/tasks/<%= task._id %>" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Task
        </a>
        <h1 class="task-title">Edit Task: <%= task.title %></h1>
        <p class="task-subtitle">Update task details</p>
    </div>
    
    <!-- Edit Form -->
    <div class="task-card">
        <form id="editTaskForm" class="task-form">
            <input type="hidden" name="project" value="<%= task.project._id %>">
            
            <div class="task-form-grid">
                <div class="form-group">
                    <label class="form-label">
                        Task Title *
                    </label>
                    <input 
                        type="text" 
                        name="title" 
                        required
                        value="<%= task.title %>"
                        class="form-control"
                        autocomplete="off"
                    >
                </div>
                
                <div class="form-group">
                    <label class="form-label">
                        Priority *
                    </label>
                    <select 
                        name="priority" 
                        required
                        class="form-control form-select"
                    >
                        <option value="low" <%= task.priority === 'low' ? 'selected' : '' %>>Low</option>
                        <option value="medium" <%= task.priority === 'medium' ? 'selected' : '' %>>Medium</option>
                        <option value="high" <%= task.priority === 'high' ? 'selected' : '' %>>High</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <label class="form-label">
                    Description
                </label>
                <textarea 
                    name="description" 
                    rows="4"
                    class="form-control"
                    style="resize: vertical;"
                ><%= task.description || '' %></textarea>
            </div>
            
            <div class="task-form-row">
                <div class="form-group">
                    <label class="form-label">
                        Status *
                    </label>
                    <select 
                        name="status" 
                        required
                        class="form-control form-select"
                    >
                        <option value="todo" <%= task.status === 'todo' ? 'selected' : '' %>>To Do</option>
                        <option value="in-progress" <%= task.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                        <option value="done" <%= task.status === 'done' ? 'selected' : '' %>>Done</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label class="form-label">
                        Assign To
                    </label>
                    <select 
                        name="assignedTo" 
                        class="form-control form-select"
                    >
                        <option value="">Unassigned</option>
                        <% allMembers.forEach(member => { %>
                            <option value="<%= member._id %>" 
                                <%= task.assignedTo && task.assignedTo._id.toString() === member._id.toString() ? 'selected' : '' %>
                            >
                                <%= member.username %>
                                <% if (member.isOwner) { %> (Owner)<% } %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                
                <div class="form-group">
                    <label class="form-label">
                        Due Date
                    </label>
                    <input 
                        type="date" 
                        name="dueDate"
                        value="<%= task.dueDate ? new Date(task.dueDate).toISOString().split('T')[0] : '' %>"
                        class="form-control"
                    >
                </div>
            </div>
            
            <div class="task-form-actions">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a href="/tasks/<%= task._id %>" class="btn btn-secondary">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<script>
document.getElementById('editTaskForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const form = e.target;
    const submitBtn = form.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
    submitBtn.disabled = true;
    
    try {
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        // Process data
        if (data.assignedTo === '') {
            data.assignedTo = null;
        }
        
        if (data.dueDate) {
            const date = new Date(data.dueDate);
            data.dueDate = date.toISOString();
        } else {
            delete data.dueDate;
        }
        
        // Use correct endpoint
        const response = await fetch(`/api/projects/${data.project}/tasks/<%= task._id %>`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data),
            credentials: 'include'
        });
        
        // Check content type
        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
            const text = await response.text();
            throw new Error(`Expected JSON but got: ${text.substring(0, 100)}`);
        }
        
        const result = await response.json();
        
        if (result.success) {
            window.location.href = `/tasks/<%= task._id %>?success=Task updated successfully`;
        } else {
            showAlert('error', result.message || 'Failed to update task');
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
        }
    } catch (error) {
        console.error('Update task error:', error);
        showAlert('error', 'Error: ' + error.message);
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
    }
});
</script>